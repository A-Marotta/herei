<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css">
    <link rel="stylesheet" href="/css/register-login.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <title>Login</title>
</head>
<body>
<div class="wrapper">
    <h1>Login</h1>

    <ul>
      <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
      <li><%= error.message %></li>
      <% }) %> <% } %>
    </ul>

    <ul>
      <% if(messages.success_msg) { %>
      <li><%= messages.success_msg %></li>
      <% } %>
    </ul>

    <ul>
      <% if (messages.error) { %>
      <li><%= messages.error %></li>
      <% } %>
    </ul>

    <div class="form-wrapper">

        <form class="login-form" action="/users/login" method="post">
        
        <div class="user-input-wrapper">
            <input class="user-input" type="email" id="email" name="email" placeholder="Email" required>
        </div>
        <div class="user-input-wrapper">
            <input class="user-input" type="password" id="password" name="password" placeholder="Password" required>
        </div>
      
        <div class="user-input-wrapper">
        <button class="user-input" class="login-btn" type="submit">Login</button>
        </div>

        <a class="register-link" href="/users/register">Register</a>
        </div>
</form>
</body>
</html>